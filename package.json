{
  "name": "simplemtc",
  "author": "ProCraftGamin",
  "description": "A simple app to run MIDI Timecode (MTC) over physical and virtual outputs.",
  "version": "1.0.1",
  "main": "main.js",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@julusian/midi": "^3.6.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "electron-prompt": "^1.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "dist": "electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "rebuild": "electron-rebuild",
    "package": "tsc timecode.ts && npm run build && npx electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "ts-node": "^10.9.2"
  },
  "build": {
    "appId": "com.procraftgamin.simplemtc",
    "productName": "SimpleMTC",
    "extends": null,
    "files": [
      "dist/",
      "build/",
      "dist-electron/",
      "main.js",
      "preload.js",
      "timecode.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon512.png"
    },
    "win": {
      "target": "portable",
      "icon": "assets/icon256.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "assets/icon512.png"
    }
  }
}
